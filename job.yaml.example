# ===============================
# Job Configuration Example. Use this as a starting point to populate your own config
# ===============================
apiVersion: batch/v1
kind: Job
metadata:
  name: # Name of the dataset being submitted "aa-dataset-abcdef-123456"
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        # Key value pairs of labels. This is required if networkpolicies are in use.
    spec:
      containers:
        - name: submitter
          image: harbor.nbis.se/sda/submitter:latest
          imagePullPolicy: Always
          args: ["job"]
          env:
            - name: USER_ID
              value: johndoe@lifescience-ri.eu
            - name: DATASET_ID
              value: aa-Dataset-abc
            - name: DATASET_FOLDER
              value: DATASET_ABC
            - name: SSL_CA_CERT
              value: "/.secrets/tls/ca.crt"
            - name: CLIENT_API_HOST
              value: https://api:8080
            - name: CLIENT_ACCESS_TOKEN 
              value:
            - name: MAIL_UPLOADER_NAME
              value: John Doe
            - name: MAIL_UPLOADER
              value: uploader@email.com
            - name: MAIL_ADDRESS
              value: yourmail@yourmailservice.com
            - name: MAIL_PASSWORD
              value: yourpassword
            - name: MAIL_SMTP_HOST
              value: yourmailservice.com
            - name: MAIL_SMTP_PORT
              value: "587"
            - name: DB_HOST
              value: "localhost"
            - name: DB_PORT
              value: "15432"
            - name: DB_USER
              valueFrom:
                secretRef:
                  name: # Name of the secret that contains the data
                  key: # Key in the secret thhat has the value of the DB user (usually "username")
            - name: DB_PASSWORD
              valueFrom:
                secretRef:
                  name: # Name of the secret that contains the data
                  key: # Key in the secret thhat has the value of the password for the DB user (usually "password")
            - name: DB_NAME
              value: # Name of the database to connect to
            - name: DB_SCHEMA
              value: # name of the DB schema to use as search base
            - name: DB_SSL_MODE
              value:  # Available options is, disable, verify-ca, verify-full
            - name: DB_CA_CERT
              value: "/.secrets/tls/ca.crt"
            - name: DB_CLIENT_CERT
              value: "/.secrets/tls/tls.crt"
            - name: DB_CLIENT_KEY
              value: "/.secrets/tls/tlks.key"
          securityContext:
            allowPrivilegeEscalation: false
            runAsNonRoot: true
            capabilities:
              drop: ["ALL"]
            seccompProfile:
              type: RuntimeDefault
          volumeMounts:
            - name: data-volume
              mountPath: /data
            - name: tls
              mountPath: /.secrets/tls/
      restartPolicy: Never
      securityContext:
        fsGroup: 65534
        runAsGroup: 65534
        runAsUser: 65534
      volumes:
        - name: data-volume
          emptyDir: {}
        - name: tls
          secret:
            defaultMode: 288 # This is the decimal notation of filemode 0440. The 4 digit filemode is also a valid enrty.
            secretName: # Name of the secret that holds the certificates
