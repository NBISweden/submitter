# ===============================
# Job Configuration Example. Use this as a starting point to populate your own config
# ===============================
apiVersion: batch/v1
kind: Job
metadata:
  name: aa-dataset-abc
  labels:
    release: pipeline
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        release: pipeline
    spec:
      securityContext:
        fsGroup: 65534
        runAsGroup: 65534
        runAsUser: 65534
      restartPolicy: Never
      containers:
        - name: submitter
          image: harbor.nbis.se/sda/submitter:latest
          imagePullPolicy: Always
          args: ["job", "0"] # The second arg represents the expected number of files to be in the final dataset
          env:
            - name: USER_ID
              value: johndoe@lifescience-ri.eu
            - name: DATASET_ID
              value: aa-Dataset-abc
            - name: DATASET_FOLDER
              value: DATASET_ABC
            - name: SSL_CA_CERT
              value: "/.secrets/tls/ca.crt"
            - name: CLIENT_API_HOST
              value: https://api:8080
            - name: CLIENT_ACCESS_TOKEN 
              value:
            - name: MAIL_UPLOADER_NAME
              value: "John Doe"
            - name: MAIL_UPLOADER
              value: uploader@email.com
            - name: MAIL_ADDRESS
              value: yourmail@yourmailservice.com
            - name: MAIL_PASSWORD
              value: yourpassword
            - name: MAIL_SMTP_HOST
              value: yourmailservice.com
            - name: MAIL_SMTP_PORT
              value: "587"
            - name: DB_HOST
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_HOST
            - name: DB_PORT
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_PORT
            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_USER
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_PASSWORD
            - name: DB_NAME
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_NAME
            - name: DB_SCHEMA
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_SCHEMA
            - name: DB_SSL_MODE
              valueFrom:
                secretKeyRef:
                  name: sda-sda-svc-submitter
                  key: DB_SSL_MODE
            - name: DB_CA_CERT
              value: "/.secrets/tls/ca.crt"
            - name: DB_CLIENT_CERT
              value: /.secrets/tls/tls.crt
            - name: DB_CLIENT_KEY
              value: /.secrets/tls/tls.key
          securityContext:
            allowPrivilegeEscalation: false
            runAsNonRoot: true
            runAsUser: 65534
            runAsGroup: 65534
            capabilities:
              drop: ["ALL"]
            seccompProfile:
              type: RuntimeDefault
          volumeMounts:
            - name: data-volume
              mountPath: /data
            - mountPath: /.secrets/tls/
              name: tls
      volumes:
        - name: data-volume
          emptyDir: {}
        - name: tls
          secret:
            defaultMode: 288
            secretName: svc-api-certs
